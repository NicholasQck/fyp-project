generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userID    String @id
  roleID    Int    @db.SmallInt
  firstName String
  lastName  String
  password  String
  role      Role   @relation(fields: [roleID], references: [roleID])
}

model Role {
  roleID   Int    @id @db.SmallInt
  roleName String
  users    User[]
}
